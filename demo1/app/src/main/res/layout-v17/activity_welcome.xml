<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.demo1.WelcomeActivity"
    android:background="#833534" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/logoName"
        android:id="@+id/textLogoName"
        android:textColor="#fdfdfe"
        android:textStyle="bold|italic"
        android:textSize="40sp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/slogan"
        android:id="@+id/textSlogan"
        android:layout_below="@+id/textLogoName"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:singleLine="true"
        android:textStyle="italic"
        android:textColor="#eeeeee"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textSize="20sp"
        android:id="@+id/buttonStart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:width="130dp"
        android:height="50dp"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer1"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_below="@+id/textSlogan"
        android:layout_toLeftOf="@+id/imagePlayer2"
        android:layout_margin = "10dp"
        android:clickable="true"
        android:contentDescription="@string/player1"
        android:src="@drawable/player1"
        android:visibility="visible" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer2"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_below="@+id/textSlogan"
        android:layout_centerHorizontal="true"
        android:layout_margin = "10dp"
        android:clickable="true"
        android:contentDescription="@string/player2"
        android:src="@drawable/player2"
        android:visibility="visible" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer3"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_below="@+id/textSlogan"
        android:layout_toRightOf="@+id/imagePlayer2"
        android:layout_margin = "10dp"
        android:clickable="true"
        android:contentDescription="@string/player3"
        android:src="@drawable/player3"
        android:visibility="visible" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer4"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_below="@+id/imagePlayer2"
        android:layout_toLeftOf="@id/imagePlayer2"
        android:layout_margin = "10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@string/player4"
        android:src="@drawable/player4"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer5"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagePlayer2"
        android:layout_margin = "10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@string/player5"
        android:src="@drawable/player5"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer6"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_toRightOf="@+id/imagePlayer2"
        android:layout_below="@+id/imagePlayer2"
        android:layout_margin = "10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@string/player6"
        android:src="@drawable/player6"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer7"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_below="@+id/imagePlayer5"
        android:layout_toLeftOf="@id/imagePlayer2"
        android:layout_margin = "10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@string/player7"
        android:src="@drawable/player7"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer8"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagePlayer5"
        android:layout_margin = "10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@string/player8"
        android:src="@drawable/player8"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imagePlayer9"
        android:background="#666666"
        android:adjustViewBounds="true"
        android:layout_toRightOf="@+id/imagePlayer2"
        android:layout_below="@+id/imagePlayer5"
        android:layout_margin = "10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@string/player9"
        android:src="@drawable/player1"/>
</RelativeLayout>
