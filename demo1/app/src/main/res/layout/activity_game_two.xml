<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.demo1.GameOneActivity"
    android:background="#833534"
    android:onClick="layoutGameTwo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:src="@drawable/ten_of_clubs"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goodone"
        android:textSize="20sp"
        android:id="@+id/buttonGoodOne"
        android:onClick="btGoodOne"
        android:visibility="visible"
        android:width="100dp"
        android:height="70dp"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goodtwo"
        android:textSize="20sp"
        android:id="@+id/buttonGoodTwo"
        android:onClick="btGoodTwo"
        android:visibility="visible"
        android:width="100dp"
        android:height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goodthree"
        android:textSize="20sp"
        android:id="@+id/buttonGoodThree"
        android:onClick="btGoodThree"
        android:visibility="visible"
        android:width="100dp"
        android:height="70dp"
        android:layout_marginLeft="110dp"
        android:layout_alignTop="@+id/buttonGoodTwo"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
