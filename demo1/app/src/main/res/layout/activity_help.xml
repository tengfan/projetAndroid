<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.demo1.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/sea_background_2">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.administrator.demo1.MainActivity"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="20">
            <TextView
                android:text="Ã‡a PICOLE:"
                android:id="@+id/help_title_gameOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:singleLine="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/help_gameOne"
                android:gravity="center"
                android:id="@+id/helpGameOne"
                android:textSize="24sp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:minLines="1"
                android:autoText="true"
                android:textColor="#232323" />

            <TextView
                android:text="F*ck the Dealer:"
                android:id="@+id/help_title_gameTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:singleLine="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10.5"
                android:text="@string/help_gameTwo"
                android:gravity="center"
                android:id="@+id/helpGameTwo"
                android:textSize="24sp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="12"
                android:minLines="1"
                android:autoText="true"
                android:textColor="#232323" />
            </LinearLayout>
    </ScrollView>
</LinearLayout>