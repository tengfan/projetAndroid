                android:layout_height="wrap_content"
                android:id="@+id/buttonAdd4"
                android:width="20pt"
                android:height="20pt"
                android:visibility="visible"
                android:onClick="btAdd4"
                android:background="@drawable/button_add"
                android:layout_alignBottom="@+id/editPlayer3"
                android:layout_toStartOf="@+id/editPlayer1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAdd5"
                android:background="@drawable/button_add"
                android:width="20pt"
                android:height="20pt"
                android:visibility="gone"
                android:onClick="btAdd5"
                android:layout_alignBottom="@+id/editPlayer4"
                android:layout_toStartOf="@+id/editPlayer1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAdd6"
                android:background="@drawable/button_add"
                android:width="20pt"
