                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRemove10"
                android:background="@drawable/button_minus"
                android:width="20pt"
                android:height="20pt"
                android:layout_below="@+id/editPlayer9"
                android:layout_toEndOf="@+id/editPlayer1"
                android:visibility="gone"
                android:onClick="btRemove10"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRemove11"
                android:background="@drawable/button_minus"
                android:width="20pt"
                android:height="20pt"
                android:layout_below="@+id/editPlayer10"
                android:layout_toEndOf="@+id/editPlayer1"
                android:visibility="gone"
                android:onClick="btRemove11"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRemove12"
                android:background="@drawable/button_minus"
                android:width="20pt"
                android:height="20pt"
                android:layout_below="@+id/editPlayer11"
                android:layout_toEndOf="@+id/editPlayer1"
                android:visibility="gone"
                android:onClick="btRemove12"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.administrator.demo1.GameOneActivity"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonStart"
            android:onClick="btStart"
            android:background="@drawable/button_start"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>
