<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.demo1.MainActivity"
    android:background="@drawable/ice_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="10">

    <TextView
        android:text="@string/choose_game"
        android:id="@+id/choose_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="#232323"
        android:singleLine="true"
        android:gravity="center"/>

    <Button
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:textSize="35sp"
        android:id="@+id/buttonGameOne"
        android:background="@drawable/cbeer"
        android:onClick="btGameOne"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:text="@string/gametwo"
        android:textSize="35sp"
        android:id="@+id/buttonGameTwo"
        android:onClick="btGameTwo"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:text="@string/gamethree"
        android:textSize="35sp"
        android:id="@+id/buttonGameThree"
        android:onClick="btGameThree"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/help"
        android:textSize="25sp"
        android:height="10dp"
        android:id="@+id/buttonHelp"
        android:layout_marginTop="70dp"
        android:onClick="btHelp"/>

</LinearLayout>
