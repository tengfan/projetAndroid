<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.demo1.MainActivity"
    android:background="@drawable/ice_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="10">

    <TextView
        android:text="@string/choose_game"
        android:id="@+id/choose_game"
        android:layout_width="match_parent"
        android:layout_height="0"
        android:layout_weight="2.2"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="#232323"
        android:singleLine="true"
        android:gravity="center"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="0"
        android:layout_weight="2.1"
        android:id="@+id/buttonGameOne"
        android:background="@drawable/button_game_1"
        android:onClick="btGameOne"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="0"
        android:layout_weight="2.1"
        android:id="@+id/buttonGameTwo"
        android:background="@drawable/button_game_2"
        android:onClick="btGameTwo"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="0"
        android:layout_weight="2.1"
        android:background="@drawable/button_game_3"
        android:id="@+id/buttonGameThree"
        android:onClick="btGameThree"
        android:layout_marginTop="10dp"/>
    
    <Button
        android:layout_width="100dp"
        android:layout_height="0"
        android:layout_weight="1.5"
        android:background="@drawable/button_help"
        android:id="@+id/buttonHelp"
        android:layout_marginTop="20dp"
        android:onClick="btHelp"/>

</LinearLayout>
