<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.demo1.MainActivity"
    android:background="#833534"
    android:onClick="layoutMain">

    <TextView
        android:text="@string/choose_game"
        android:id="@+id/choose_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="#fdfdfe"
        android:singleLine="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gameone"
        android:textSize="35sp"
        android:id="@+id/buttonGameOne"
        android:onClick="btGameOne"
        android:visibility="visible"
        android:width="300dp"
        android:height="120dp"
        android:layout_below="@id/choose_game"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
